import '../styles/global.css';
import DemoBanner from '../components/DemoBanner.astro';
import WorkoutCard from '../components/WorkoutCard.tsx';
import { Dumbbell, Plus, User, LogOut, Trash2 } from 'lucide-react';
import { supabaseApi, supabase, type Workout, type Stats } from '../lib/supabase';

// Verificar cookie de sesi√≥n SSR primero
const accessToken = Astro.cookies.get('sb-access-token');

if (!accessToken) {
  return Astro.redirect('/login');
}

let workouts: Workout[] = [];
let stats: Stats = { total_workouts: 0, total_exercises: 0, total_kg: 0 };
let fetchError = false;
let currentUser = null;

try {
  const supabaseUrl = 'https://deqwjyvqchtsexttwftl.supabase.co';
  const supabaseAnonKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImRlcXdqeXZxY2h0c2V4dHR3ZnRsIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NzIwMDMzMDgsImV4cCI6MjA4NzU3OTMwOH0.soQ9wQyd2lQ-q5xi-YaARIMmTgecuErsBAgale85wpA';
  const headers = {
    'apikey': supabaseAnonKey,
    'Authorization': `Bearer ${accessToken.value}`,
    'Content-Profile': 'public' // required for rest data fetching
  };

  // 1. Fetch user to validate token
  const userRes = await fetch(`${supabaseUrl}/auth/v1/user`, { headers });
  if (!userRes.ok) throw new Error('Invalid token');
  
  const userData = await userRes.json();
  if (!userData) throw new Error('No user data');
  currentUser = userData;

  // 2. Fetch workouts for the user
  const workoutsRes = await fetch(
    `${supabaseUrl}/rest/v1/entrenamientos?select=*&id_usuario=eq.${currentUser.id}&order=fecha.desc`, 
    { headers }
  );
  if (!workoutsRes.ok) throw new Error('Failed to fetch workouts');
  workouts = await workoutsRes.json();

  // 3. Compute stats
  const allExercises = workouts.flatMap(w => w.ejercicios || []);
  const total_kg = Math.round(
    allExercises.reduce((sum, ex) => sum + (ex.weight * ex.sets * ex.reps), 0) / 1000
  );

  stats = {
    total_workouts: workouts.length,
    total_exercises: allExercises.length,
    total_kg
  };

} catch (e) {
  console.error("SSR REST API Error fetching from Supabase in dashboard-user:", e);
  fetchError = true;
  // Temporary: we won't redirect on data loop failure just to see the page load
  // return Astro.redirect('/login');
}
