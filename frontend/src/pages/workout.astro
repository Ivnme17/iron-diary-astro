---
import SessionProtectedLayout from '../layouts/SessionProtectedLayout.astro';
import { Dumbbell, ArrowLeft, Save, Plus } from 'lucide-react';
import { EXERCISES_LIST, ROUTINES_LIST } from '../data/exercises';
---

<SessionProtectedLayout title="Entrenamiento">
    <div class="mb-8">
        <div class="flex items-center gap-3 mb-6">
            <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-primary">
                <Dumbbell className="h-5 w-5 text-primary-foreground" />
            </div>
            <h1 class="text-3xl">NUEVO ENTRENAMIENTO</h1>
        </div>
        <a href="/dashboard-user" class="inline-flex h-9 items-center justify-center rounded-md text-xs font-medium text-muted-foreground transition-colors hover:bg-accent hover:text-accent-foreground px-3">
            <ArrowLeft className="h-3.5 w-3.5 mr-1" /> Dashboard
        </a>
    </div>

    <!-- Form Container -->
    <div class="rounded-xl border border-border bg-card p-6">
        <form id="workoutForm" class="space-y-6">
            <!-- Basic Info -->
            <div class="grid gap-4 sm:grid-cols-2">
                <div class="relative">
                    <label for="routineName" class="block text-sm font-medium text-foreground mb-2">
                        Nombre de Rutina
                    </label>
                    <input
                        type="text"
                        id="routineName"
                        name="routineName"
                        placeholder="Ej: Push Day, Pull Day, Leg Day"
                        class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
                        required
                    />
                    <!-- Sugerencias de rutinas -->
                    <div id="routineSuggestions" class="absolute z-50 w-full mt-1 max-h-60 overflow-auto rounded-md border border-border bg-popover shadow-lg hidden"></div>
                </div>
                <div>
                    <label for="workoutDate" class="block text-sm font-medium text-foreground mb-2">
                        Fecha
                    </label>
                    <input
                        type="date"
                        id="workoutDate"
                        name="workoutDate"
                        class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
                        required
                    />
                </div>
            </div>

            <!-- Exercises Section -->
            <div>
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-lg font-semibold">Ejercicios</h2>
                    <button type="button" id="addExercise" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-8 px-3">
                        <Plus className="h-4 w-4 mr-1" />
                        Agregar Ejercicio
                    </button>
                </div>
                
                <div id="exercisesContainer" class="space-y-4">
                    <!-- Exercise 1 (default) -->
                    <div class="exercise-item rounded-lg border border-border p-4">
                        <div class="grid gap-4 sm:grid-cols-4">
                            <div class="sm:col-span-2 relative">
                                <label class="block text-sm font-medium text-foreground mb-2">Nombre del Ejercicio</label>
                                <input type="text" name="exerciseName" placeholder="Ej: Press de Banca" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                                <!-- Sugerencias de ejercicios -->
                                <div class="exercise-suggestions absolute z-50 w-full mt-1 max-h-60 overflow-auto rounded-md border border-border bg-popover shadow-lg hidden"></div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-foreground mb-2">Series</label>
                                <input type="number" name="sets" min="1" placeholder="4" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-foreground mb-2">Repeticiones</label>
                                <input type="number" name="reps" min="1" placeholder="12" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                            </div>
                        </div>
                        <div class="mt-4">
                            <label class="block text-sm font-medium text-foreground mb-2">Peso (kg)</label>
                            <input type="number" name="weight" min="0" step="0.5" placeholder="60" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                        </div>
                        <button type="button" class="remove-exercise mt-2 text-sm text-destructive hover:text-destructive/80 hidden">Eliminar Ejercicio</button>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end">
                <button type="submit" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-6">
                    <Save className="h-4 w-4 mr-2" />
                    Guardar Entrenamiento
                </button>
            </div>
        </form>
    </div>

    <script>
        import { sessionManager } from '../lib/session-manager.js';
        import { supabaseApi } from '../lib/supabase';
        import { EXERCISES_LIST, ROUTINES_LIST } from '../data/exercises.js';

        // Inicializar gestor de sesiones
        document.addEventListener('DOMContentLoaded', async () => {
            await sessionManager.init();
            sessionManager.setupUserElements();
            
            // Configurar autocompletado simple
            setupSimpleAutocomplete('routineName', 'routineSuggestions', ROUTINES_LIST);
            
            // Configurar formulario
            setupWorkoutForm();
        });

        function setupSimpleAutocomplete(inputId, suggestionsId, suggestions) {
            const input = document.getElementById(inputId);
            const suggestionsDiv = document.getElementById(suggestionsId);
            
            if (!input || !suggestionsDiv) return;
            
            input.addEventListener('input', () => {
                const value = input.value.toLowerCase();
                
                if (value.length === 0) {
                    suggestionsDiv.classList.add('hidden');
                    return;
                }
                
                const filtered = suggestions.filter(s => 
                    s.toLowerCase().includes(value)
                );
                
                if (filtered.length === 0) {
                    suggestionsDiv.classList.add('hidden');
                    return;
                }
                
                suggestionsDiv.innerHTML = '';
                filtered.forEach(suggestion => {
                    const div = document.createElement('div');
                    div.className = 'px-3 py-2 text-sm cursor-pointer hover:bg-accent hover:text-accent-foreground';
                    
                    // Resaltar coincidencia
                    const regex = new RegExp(`(${input.value})`, 'gi');
                    div.innerHTML = suggestion.replace(regex, '<strong class="font-bold text-primary">$1</strong>');
                    
                    div.addEventListener('click', () => {
                        input.value = suggestion;
                        suggestionsDiv.classList.add('hidden');
                    });
                    
                    suggestionsDiv.appendChild(div);
                });
                
                suggestionsDiv.classList.remove('hidden');
            });
            
            // Cerrar al hacer clic fuera
            document.addEventListener('click', (e) => {
                if (!input.contains(e.target) && !suggestionsDiv.contains(e.target)) {
                    suggestionsDiv.classList.add('hidden');
                }
            });
            
            // Cerrar con Escape
            input.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    suggestionsDiv.classList.add('hidden');
                }
            });
        }

        function setupWorkoutForm() {
            const form = document.getElementById('workoutForm');
            const addExerciseBtn = document.getElementById('addExercise');
            const exercisesContainer = document.getElementById('exercisesContainer');
            
            // Establecer fecha actual
            const dateInput = document.getElementById('workoutDate');
            if (dateInput) {
                dateInput.value = new Date().toISOString().split('T')[0];
            }

            // Configurar autocompletado para el primer ejercicio
            const firstExerciseInput = document.querySelector('input[name="exerciseName"]');
            const firstExerciseSuggestions = firstExerciseInput?.nextElementSibling;
            if (firstExerciseInput && firstExerciseSuggestions) {
                setupSimpleAutocompleteForInput(firstExerciseInput, firstExerciseSuggestions, EXERCISES_LIST);
            }

            // Agregar ejercicio
            addExerciseBtn?.addEventListener('click', () => {
                const exerciseDiv = document.createElement('div');
                exerciseDiv.className = 'exercise-item rounded-lg border border-border p-4';
                exerciseDiv.innerHTML = `
                    <div class="grid gap-4 sm:grid-cols-4">
                        <div class="sm:col-span-2 relative">
                            <label class="block text-sm font-medium text-foreground mb-2">Nombre del Ejercicio</label>
                            <input type="text" name="exerciseName" placeholder="Ej: Press de Banca" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                            <div class="exercise-suggestions absolute z-50 w-full mt-1 max-h-60 overflow-auto rounded-md border border-border bg-popover shadow-lg hidden"></div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-foreground mb-2">Series</label>
                            <input type="number" name="sets" min="1" placeholder="4" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-foreground mb-2">Repeticiones</label>
                            <input type="number" name="reps" min="1" placeholder="12" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                        </div>
                    </div>
                    <div class="mt-4">
                        <label class="block text-sm font-medium text-foreground mb-2">Peso (kg)</label>
                        <input type="number" name="weight" min="0" step="0.5" placeholder="60" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                    </div>
                    <button type="button" class="remove-exercise mt-2 text-sm text-destructive hover:text-destructive/80">Eliminar Ejercicio</button>
                `;
                
                exercisesContainer?.appendChild(exerciseDiv);
                
                // Configurar autocompletado para el nuevo ejercicio
                const newExerciseInput = exerciseDiv.querySelector('input[name="exerciseName"]');
                const newExerciseSuggestions = exerciseDiv.querySelector('.exercise-suggestions');
                if (newExerciseInput && newExerciseSuggestions) {
                    setupSimpleAutocompleteForInput(newExerciseInput, newExerciseSuggestions, EXERCISES_LIST);
                }
                
                setupRemoveButtons();
            });

            function setupSimpleAutocompleteForInput(input, suggestionsDiv, suggestions) {
                input.addEventListener('input', () => {
                    const value = input.value.toLowerCase();
                    
                    if (value.length === 0) {
                        suggestionsDiv.classList.add('hidden');
                        return;
                    }
                    
                    const filtered = suggestions.filter(s => 
                        s.toLowerCase().includes(value)
                    );
                    
                    if (filtered.length === 0) {
                        suggestionsDiv.classList.add('hidden');
                        return;
                    }
                    
                    suggestionsDiv.innerHTML = '';
                    filtered.forEach(suggestion => {
                        const div = document.createElement('div');
                        div.className = 'px-3 py-2 text-sm cursor-pointer hover:bg-accent hover:text-accent-foreground';
                        
                        const regex = new RegExp(`(${input.value})`, 'gi');
                        div.innerHTML = suggestion.replace(regex, '<strong class="font-bold text-primary">$1</strong>');
                        
                        div.addEventListener('click', () => {
                            input.value = suggestion;
                            suggestionsDiv.classList.add('hidden');
                        });
                        
                        suggestionsDiv.appendChild(div);
                    });
                    
                    suggestionsDiv.classList.remove('hidden');
                });
                
                document.addEventListener('click', (e) => {
                    if (!input.contains(e.target) && !suggestionsDiv.contains(e.target)) {
                        suggestionsDiv.classList.add('hidden');
                    }
                });
            }

            // Configurar botones de eliminar
            function setupRemoveButtons() {
                document.querySelectorAll('.remove-exercise').forEach(btn => {
                    btn.onclick = function() {
                        const exerciseItems = document.querySelectorAll('.exercise-item');
                        if (exerciseItems.length > 1) {
                            this.closest('.exercise-item')?.remove();
                        }
                    };
                });
            }
            
            setupRemoveButtons();

            // Enviar formulario
            form?.addEventListener('submit', async (e) => {
                e.preventDefault();
                
                // Verificar autenticación primero
                try {
                    console.log('Verificando autenticación con sessionManager...');
                    console.log('sessionManager.currentUser:', sessionManager.currentUser);
                    
                    if (!sessionManager.currentUser) {
                        console.error('No hay usuario en sessionManager');
                        alert('Debes estar autenticado para guardar entrenamientos. Por favor, inicia sesión nuevamente.');
                        window.location.href = '/login';
                        return;
                    }
                    
                    console.log('Usuario autenticado:', sessionManager.currentUser);
                } catch (error) {
                    console.error('Error verificando autenticación:', error);
                    alert('Error de autenticación: ' + (error.message || error));
                    window.location.href = '/login';
                    return;
                }
                
                const exercises = [];
                document.querySelectorAll('.exercise-item').forEach(item => {
                    const name = item.querySelector('input[name="exerciseName"]')?.value || '';
                    const sets = parseInt(item.querySelector('input[name="sets"]')?.value || '0');
                    const reps = parseInt(item.querySelector('input[name="reps"]')?.value || '0');
                    const weight = parseFloat(item.querySelector('input[name="weight"]')?.value || '0');
                    
                    if (name && sets && reps && weight >= 0) {
                        exercises.push({
                            id: Date.now().toString() + Math.random(),
                            name,
                            sets,
                            reps,
                            weight
                        });
                    }
                });

                const routineName = document.getElementById('routineName')?.value || '';
                const workoutDate = document.getElementById('workoutDate')?.value || '';

                if (!routineName || !workoutDate || exercises.length === 0) {
                    alert('Por favor completa todos los campos del formulario');
                    return;
                }

                const workoutData = {
                    nombre_rutina: routineName,
                    fecha: workoutDate,
                    ejercicios: exercises
                };

                try {
                    await supabaseApi.createWorkout(workoutData);
                    alert('Entrenamiento guardado exitosamente');
                    window.location.href = '/dashboard-user';
                } catch (error) {
                    console.error('Error saving workout:', error);
                    alert('Error al guardar el entrenamiento: ' + error.message);
                }
            });
        }
    </script>
</SessionProtectedLayout>
