---
import SessionProtectedLayout from '../layouts/SessionProtectedLayout.astro';
import { Dumbbell, ArrowLeft, Save, Plus } from 'lucide-react';
---

<SessionProtectedLayout title="Entrenamiento">
    <div class="mb-8">
        <div class="flex items-center gap-3 mb-6">
            <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-primary">
                <Dumbbell className="h-5 w-5 text-primary-foreground" />
            </div>
            <h1 class="text-3xl">NUEVO ENTRENAMIENTO</h1>
        </div>
        <a href="/dashboard-user" class="inline-flex h-9 items-center justify-center rounded-md text-xs font-medium text-muted-foreground transition-colors hover:bg-accent hover:text-accent-foreground px-3">
            <ArrowLeft className="h-3.5 w-3.5 mr-1" /> Dashboard
        </a>
    </div>

    <!-- Form Container -->
    <div class="rounded-xl border border-border bg-card p-6">
        <form id="workoutForm" class="space-y-6">
            <!-- Basic Info -->
            <div class="grid gap-4 sm:grid-cols-2">
                <div>
                    <label for="routineName" class="block text-sm font-medium text-foreground mb-2">
                        Nombre de Rutina
                    </label>
                    <input
                        type="text"
                        id="routineName"
                        name="routineName"
                        placeholder="Ej: Push Day, Pull Day, Leg Day"
                        class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
                        required
                    />
                </div>
                <div>
                    <label for="workoutDate" class="block text-sm font-medium text-foreground mb-2">
                        Fecha
                    </label>
                    <input
                        type="date"
                        id="workoutDate"
                        name="workoutDate"
                        class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
                        required
                    />
                </div>
            </div>

            <!-- Exercises Section -->
            <div>
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-lg font-semibold">Ejercicios</h2>
                    <button type="button" id="addExercise" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-8 px-3">
                        <Plus className="h-4 w-4 mr-1" />
                        Agregar Ejercicio
                    </button>
                </div>
                
                <div id="exercisesContainer" class="space-y-4">
                    <!-- Exercise 1 (default) -->
                    <div class="exercise-item rounded-lg border border-border p-4">
                        <div class="grid gap-4 sm:grid-cols-4">
                            <div class="sm:col-span-2">
                                <label class="block text-sm font-medium text-foreground mb-2">Nombre del Ejercicio</label>
                                <input type="text" name="exerciseName" placeholder="Ej: Press de Banca" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-foreground mb-2">Series</label>
                                <input type="number" name="sets" min="1" placeholder="4" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-foreground mb-2">Repeticiones</label>
                                <input type="number" name="reps" min="1" placeholder="12" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                            </div>
                        </div>
                        <div class="mt-4">
                            <label class="block text-sm font-medium text-foreground mb-2">Peso (kg)</label>
                            <input type="number" name="weight" min="0" step="0.5" placeholder="60" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                        </div>
                        <button type="button" class="remove-exercise mt-2 text-sm text-destructive hover:text-destructive/80 hidden">Eliminar Ejercicio</button>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end">
                <button type="submit" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-6">
                    <Save className="h-4 w-4 mr-2" />
                    Guardar Entrenamiento
                </button>
            </div>
        </form>
    </div>

    <script type="module">
        import sessionManager from '/session-manager.js';
        import { supabaseApi } from '/supabase-client.js';

        // Inicializar gestor de sesiones
        document.addEventListener('DOMContentLoaded', async () => {
            await sessionManager.init();
            sessionManager.setupUserElements();
            
            // Configurar formulario de entrenamiento
            setupWorkoutForm();
        });

        function setupWorkoutForm() {
            const form = document.getElementById('workoutForm');
            const addExerciseBtn = document.getElementById('addExercise');
            const exercisesContainer = document.getElementById('exercisesContainer');
            
            // Establecer fecha actual por defecto
            const dateInput = document.getElementById('workoutDate');
            if (dateInput) {
                dateInput.value = new Date().toISOString().split('T')[0];
            }

            // Agregar ejercicio
            addExerciseBtn?.addEventListener('click', () => {
                const exerciseDiv = document.createElement('div');
                exerciseDiv.className = 'exercise-item rounded-lg border border-border p-4';
                exerciseDiv.innerHTML = `
                    <div class="grid gap-4 sm:grid-cols-4">
                        <div class="sm:col-span-2">
                            <label class="block text-sm font-medium text-foreground mb-2">Nombre del Ejercicio</label>
                            <input type="text" name="exerciseName" placeholder="Ej: Press de Banca" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-foreground mb-2">Series</label>
                            <input type="number" name="sets" min="1" placeholder="4" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-foreground mb-2">Repeticiones</label>
                            <input type="number" name="reps" min="1" placeholder="12" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                        </div>
                    </div>
                    <div class="mt-4">
                        <label class="block text-sm font-medium text-foreground mb-2">Peso (kg)</label>
                        <input type="number" name="weight" min="0" step="0.5" placeholder="60" class="w-full h-10 rounded-md border border-border bg-background px-3 py-2 text-sm" required />
                    </div>
                    <button type="button" class="remove-exercise mt-2 text-sm text-destructive hover:text-destructive/80">Eliminar Ejercicio</button>
                `;
                
                exercisesContainer.appendChild(exerciseDiv);
                setupRemoveButtons();
            });

            // Configurar botones de eliminar
            function setupRemoveButtons() {
                document.querySelectorAll('.remove-exercise').forEach(btn => {
                    btn.onclick = function() {
                        const exerciseItems = document.querySelectorAll('.exercise-item');
                        if (exerciseItems.length > 1) {
                            this.closest('.exercise-item').remove();
                        }
                    };
                });
            }
            
            setupRemoveButtons();

            // Enviar formulario
            form?.addEventListener('submit', async (e) => {
                e.preventDefault();
                
                const exercises = [];
                document.querySelectorAll('.exercise-item').forEach(item => {
                    const name = item.querySelector('input[name="exerciseName"]').value;
                    const sets = parseInt(item.querySelector('input[name="sets"]').value);
                    const reps = parseInt(item.querySelector('input[name="reps"]').value);
                    const weight = parseFloat(item.querySelector('input[name="weight"]').value);
                    
                    exercises.push({
                        id: Date.now().toString() + Math.random(),
                        name,
                        sets,
                        reps,
                        weight
                    });
                });

                const workoutData = {
                    routine_name: document.getElementById('routineName').value,
                    date: document.getElementById('workoutDate').value,
                    exercises
                };

                try {
                    await supabaseApi.createWorkout(workoutData);
                    alert('Entrenamiento guardado exitosamente');
                    window.location.href = '/dashboard-user';
                } catch (error) {
                    console.error('Error saving workout:', error);
                    alert('Error al guardar el entrenamiento');
                }
            });
        }
    </script>
</SessionProtectedLayout>
