---
import '../styles/global.css';
import DemoBanner from '../components/DemoBanner.astro';
import { Dumbbell, ArrowRight, BarChart2, Calendar, Shield, Zap } from 'lucide-react';

const features = [
  {
    title: "Rutinas",
    desc: "Crea y edita tus rutinas de entrenamiento con nombre y fecha.",
  },
  {
    title: "Ejercicios",
    desc: "Añade ejercicios con series, repeticiones y peso al detalle.",
  },
  {
    title: "Historial",
    desc: "Consulta todos tus entrenamientos pasados en un dashboard limpio.",
  },
  {
    title: "Progreso",
    desc: "Visualiza tu evolución y mantén el registro de tu rendimiento.",
  },
];
---

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Iron Diary Demo - Astro + FastAPI</title>
</head>
<body class="min-h-screen">
    <DemoBanner />

    <!-- Hero -->
    <section class="flex flex-col items-center justify-center px-4 py-24 text-center">
        <div class="animate-fade-in">
            <div class="mx-auto mb-6 flex h-24 w-24 items-center justify-center rounded-3xl bg-primary shadow-2xl">
                <Dumbbell className="h-12 w-12 text-primary-foreground" />
            </div>
            <h1 class="text-7xl tracking-wider">DIARIO DE HIERRO</h1>
            <p class="mx-auto mt-4 max-w-lg text-lg text-muted-foreground">
                Registra tus entrenamientos. Controla tu progreso. Forja tu mejor versión.
            </p>
            <div class="mt-8 flex flex-col items-center gap-3 sm:flex-row sm:justify-center">
                <a href="/dashboard" class="inline-flex h-11 items-center justify-center rounded-md bg-primary px-8 text-base font-medium text-primary-foreground transition-colors hover:bg-primary/90">
                    Ver Demo <ArrowRight className="ml-2 h-5 w-5" />
                </a>
            </div>
        </div>
    </section>

    <!-- Features -->
    <section class="mx-auto max-w-5xl px-4 py-16">
        <h2 class="mb-12 text-center text-4xl">FUNCIONALIDADES</h2>
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
            {features.map((f, i) => (
                <div class="rounded-xl border border-border bg-card p-5 text-center transition-all hover:border-primary/40 hover:shadow-lg" style={`animation-delay: ${i * 80}ms`}>
                    <div class="mx-auto mb-3 flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10 text-primary">
                        <Zap className="h-6 w-6" />
                    </div>
                    <h3 class="mb-1 text-xl">{f.title}</h3>
                    <p class="text-sm text-muted-foreground">{f.desc}</p>
                </div>
            ))}
        </div>
    </section>

    <!-- Tech stack -->
    <section class="border-t border-border bg-card/50 py-12 text-center">
        <h2 class="mb-6 text-2xl">TECH STACK</h2>
        <div class="flex flex-wrap justify-center gap-3">
            {["Astro", "FastAPI", "Python", "React (Islands)", "Tailwind CSS"].map((t) => (
                <span class="rounded-full border border-border bg-secondary px-4 py-1.5 text-sm font-medium">
                    {t}
                </span>
            ))}
        </div>
        <p class="mt-6 text-sm text-muted-foreground">
            Proyecto demo · Desarrollado por <span class="font-medium text-primary">Ivan Martinez</span>
        </p>
    </section>
</body>
</html>
